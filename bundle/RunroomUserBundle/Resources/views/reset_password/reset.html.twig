{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('sonata_admin_dashboard') }}">
                {% if 'icon' == sonata_config.getOption('logo_content') or 'all' == sonata_config.getOption('logo_content') %}
                    <div>
                        <img style="width:64px;" src="{{ asset(sonata_config.logo) }}" alt="{{ sonata_config.title }}">
                    </div>
                {% endif %}
                {% if 'text' == sonata_config.getOption('logo_content') or 'all' == sonata_config.getOption('logo_content') %}
                    <span>{{ sonata_config.title }}</span>
                {% endif %}
            </a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">{{ 'resetting.submit'|trans({}, 'RunroomUserBundle') }}</p>
            {{ form_start(resetForm) }}
                <div class="form-group">
                    {{ form_widget(resetForm.plainPassword.first, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'form.new_password'
                    }}) }}
                    {{ form_errors(resetForm.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_widget(resetForm.plainPassword.second, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'form.new_password_confirmation'
                    }}) }}
                    {{ form_errors(resetForm.plainPassword.second) }}
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">
                            {{ 'resetting.submit'|trans({}, 'RunroomUserBundle') }}
                        </button>
                    </div>
                </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock sonata_wrapper %}
