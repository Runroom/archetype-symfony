{
    "extends": [
        "config:base",
        ":disableRateLimiting",
        ":automergePatch",
        ":automergeMinor",
        ":automergePr"
    ],
    "enabled": false,
    "packageRules": [
        {
            "matchPackagePatterns": ["sonata-project/"],
            "groupName": "sonata-project"
        },
        {
            "matchPackagePatterns": ["psalm"],
            "groupName": "psalm"
        },
        {
            "matchPackagePatterns": ["phpstan"],
            "groupName": "phpstan"
        },
        {
            "matchPackagePatterns": ["eslint"],
            "groupName": "eslint"
        },
        {
            "matchPackagePatterns": ["stylelint"],
            "groupName": "stylelint"
        },
        {
            "matchPackagePatterns": ["doctrine/"],
            "groupName": "doctrine"
        },
        {
            "matchPackagePatterns": ["runroom"],
            "groupName": "runroom"
        },
        {
            "matchPackagePatterns": ["ckeditor4"],
            "matchManagers": ["npm"],
            "enabled": false
        }
    ]
}
