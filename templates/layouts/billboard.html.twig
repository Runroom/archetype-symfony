{% extends 'layouts/base.html.twig' %}

{% block crp %}
    {% include 'helpers/inline-crp.html.twig' with { crp: 'crp.billboard' } %}
{% endblock %}

{% block body %}
    {% include 'components/skip-link.html.twig' with {
        target: '#main',
        title: 'a11y.skip_to.main'|trans
    } %}
    {% include 'components/header.html.twig' with { class: 'header--billboard' } %}
    {% include 'components/billboard.html.twig' with {
        title: block('billboardTitle') ?? '',
        description: block('billboardDescription') ?? '',
        class: block('billboardClass') ?? '',
        image: block('billboardImage') ?? ''
    } %}
    <main id="main" class="page {% block contentClass %}{% endblock %}">
        {% block content %}{% endblock %}
    </main>
    {% include 'components/footer.html.twig' %}
{% endblock %}
