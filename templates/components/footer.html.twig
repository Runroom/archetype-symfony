{% from 'helpers/macros.html.twig' import icon %}

<footer id="footer" class="bg-neutral900 text-neutral100 text-xs py-4">
    <div class="wrapper flex items-center justify-between">
        &copy; Runroom {{ 'now'|date('Y') }}
        {{ icon('r-runroom') }}
        <ul class="flex items-center space-x-2">
            {% for basicPage in get_basic_pages('footer') %}
            <li><a href="{{ path('runroom.basic_page.route.show', {'slug': basicPage.slug}) }}">{{ basicPage.title }}</a></li>
            {% endfor %}
            <li><a href="{{ path('runroom.cookies.route.cookies') }}">{{ 'cookies.policy'|trans }}</a></li>
        </ul>
    </div>
</footer>
