{% set class = class|default('') %}

<header id="header" class="header {{ class }}">
    <div class="wrapper flex items-center justify-between py-4 text-neutral900">
        {# Change this path when defining your own home route #}
        <a class="header__logo" href="/">
            {{ include('helpers/inline-svg.html.twig', {svg: 'runroom-logo'}) }}
        </a>
        <ul class="flex items-center space-x-1">
            {% for lang, href in build_alternate_links() %}
            <li>
                {% if locale == lang %}
                    <span>{{ lang|upper }}</span>
                {% else %}
                    <a href="{{ href }}">{{ lang|upper }}</a>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </div>
</header>
