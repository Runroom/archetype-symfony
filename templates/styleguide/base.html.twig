{% set locale = app.request.locale %}

<!doctype html>
<html lang="{{ locale }}" class="non-touch">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>Styleguide</title>
        <meta name="robots" content="noindex, nofollow">
        {{ include('modules/favicon.html.twig') }}
        <style>
            {{ include('crp/styleguide.min.css') }}
        </style>
    </head>
    <body>
        {{ include('components/skip-link.html.twig', {
            target: '#main',
            title: 'a11y.skip_to.main'|trans
        }) }}
        {{ include('components/skip-link.html.twig', {
            target: '#footer',
            title: 'a11y.skip_to.footer'|trans
        }) }}
        {{ include('styleguide/templates/sidebar.html.twig') }}
        <main class="styleguide" role="main" id="main-content">
            {% block body %}{% endblock %}
        </main>
        <link rel="stylesheet" href="{{ asset('assets/css/styles.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/styleguide.min.css') }}" />
        <script src="{{ asset('assets/js/styleguide.min.js') }}" async defer></script>
        {% if app.environment == 'dev' %}
            {{ include('modules/dev-bar.html.twig') }}
        {% endif %}
    </body>
</html>
